<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_show_product_price.ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-content')]" position="after">
            <t t-if="config.is_price">
                <div class="product-price d-flex flex-row px-2 justify-content-between rounded-bottom rounded-3 flex-shrink-1">
                    <span t-esc="price || 'N/A'"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>